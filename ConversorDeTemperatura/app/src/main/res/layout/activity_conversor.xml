<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    tools:context=".ActivityConversor">

    <!--Text da tela do resultado-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Resultado da conversÃ£o "
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19dp" />

    <!--Text Farehnheit-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Temperatura em Farehnheit"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <!--Text para receber o resultado de Farehnheit-->
    <TextView
        android:id="@+id/tvResultadoFaren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:text="Temperatura em Farehnheit:"
        android:textSize="20dp" />

    <!--Text Kelvin-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Temperatura em Kelvin:"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <!--Text para receber o resultado de Kelvin-->
    <TextView
        android:id="@+id/tvResultadoKelvin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:textSize="20dp" />


</LinearLayout>